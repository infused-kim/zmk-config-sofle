#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {

   // Activate ADJUST layer by pressing raise and lower
    conditional_layers {
        compatible = "zmk,conditional-layers";
        adjust_layer {
            if-layers = <LOWER RAISE>;
            then-layer = <ADJUST>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |  BSPC |
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |   U   |   I   |  O   |   P   |   \   |
// | CTRL  |  A  |  S  |  D   |  F   |  G   |                   |  H   |   J   |   K   |  L   |   ;   |   '   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |        |  |       |  N   |   M   |   ,   |  .   |   /   | SHIFT |
//               |CTRL | ALT  | LGUI | LOWER|  ENTER |  | SPACE | RAISE| CTRL  | LOCK  | DEL  |
            bindings = <
&kp ESC    &kp N1  &kp N2     &kp N3    &kp N4    &kp N5                          &kp N6  &kp N7     &kp N8     &kp N9   &kp N0    &kp BSPC
&kp TAB    &kp Q   &kp W      &kp E     &kp R     &kp T                           &kp Y   &kp U      &kp I      &kp O    &kp P     &kp BSLH
&kp LCTRL   &kp A   &kp S      &kp D     &kp F     &kp G                           &kp H   &kp J      &kp K      &kp L    &kp SEMI  &kp SQT
&kp LSHFT  &kp Z   &kp X      &kp C     &kp V     &kp B   &none       &none       &kp N   &kp M      &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                   &kp LCTRL  &kp LALT  &kp LGUI  &mo 1   &kp RET     &kp SPACE   &mo 2   &kp RCTRL  &kp LG(L)  &kp DEL
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
// | `~   |  F1  |  F2  |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
// |EP TOG|      | HUE+ | SAT+ | BRI+ | EFF+ |                   | F12  |   -   |   =   |   [  |   ]   |   \   |
// |      |      | HUE- | SAT- | BRI- | EFF- |                   |      |   _   |   +   |   {  |   }   |   |   |
// | RESET|      |      |      |      |      |        |  |       | HOME |       |       |      |  END  |       |
//               |      |      |      |      |        |  |       |      |       |       |      |
            bindings = <
&kp GRAVE          &kp F1  &kp F2           &kp F3            &kp F4           &kp F5                                  &kp F6    &kp F7     &kp F8     &kp F9    &kp F10   &kp F11
&ext_power EP_TOG  &none   &rgb_ug RGB_HUI  &rgb_ug RGB_SAI   &rgb_ug RGB_BRI  &rgb_ug RGB_EFF                         &kp F12   &kp MINUS  &kp EQUAL  &kp LBKT  &kp RBKT  &kp BSLH
&none              &none   &rgb_ug RGB_HUD  &rgb_ug RGB_SAD   &rgb_ug RGB_BRD  &rgb_ug RGB_EFR                         &none     &kp UNDER  &kp PLUS   &kp LBRC  &kp RBRC  &kp PIPE
&reset             &none   &none            &none             &none            &none             &trans     &trans     &kp HOME  &none      &none      &none     &kp END   &trans
                           &trans           &trans            &trans           &trans            &trans     &trans     &trans    &trans     &trans     &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// |BTCLR  | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
// |       |      |      |       |       |      |                | PGUP |      |   ^   |      |       |       |
// |       |      |      |       |       | CAPS |                | PGDN |   <- |   v   |  ->  |       |       |
// |       | UNDO | CUT  | COPY  | PASTE |      |      |  |      | HOME |      |       |      | END   | RESET |
//                |      |       |       |      |      |  |      |      |      |       |      |
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                       &trans     &trans    &trans    &trans     &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans                             &kp PG_UP  &trans    &kp UP    &trans     &trans  &trans
&trans      &trans        &trans        &trans        &trans        &kp CLCK                           &kp PG_DN  &kp LEFT  &kp DOWN  &kp RIGHT  &trans  &trans
&trans      &kp K_UNDO    &kp K_CUT     &kp K_COPY    &kp K_PASTE   &trans         &trans   &trans     &kp HOME   &trans    &trans    &trans     &kp END  &reset
                          &trans        &trans        &trans        &trans         &trans   &trans     &trans     &trans    &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        Adjust_layer {
// ------------------------------------------------------------------------------------------------------------
// |BTCLR | BT1   | BT2   |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
// |EXTPWR|       |       |       |       |      |                |DEFCOL|      |       |      |       |       |
// |      |       |       |       |       |      |                |      |      |       |      |       |       |
// |      |       |       |       |       |      |      |  |      |      |      |       |      |       |       |
//                |       |       |       |      |      |  |      |      |      |       |      |
        bindings = <
&bt BT_CLR                       &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &none                          &none  &none  &none  &none  &none
&ext_power EXT_POWER_TOGGLE_CMD  &none         &none         &none         &none         &none                           &rgb_ug RGB_COLOR_HSB(0,0,5)  &none  &none  &none  &none  &none
&none                            &none         &none         &none         &none         &none                           &none                          &none  &none  &none  &none  &none
&none                            &none         &none         &none         &none         &none           &none  &none    &none                          &none  &none  &none  &none  &none
                                               &none         &none         &none         &none           &none  &none    &none                          &none  &none  &none
        >;
        };

    };
};
